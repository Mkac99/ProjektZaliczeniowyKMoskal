@model Customer
@{
    ViewData["Title"] = "Edit Customer";
    var customer = ViewData.Model;
}


    <form asp-action="Update" method="post">
        <div class="container w-50 justify-content-center">
            <div class="form-group row">
                <label for="inputFirstName">First Name</label>
                <input type="text" class="form-control" id="inputFirstName"
                       asp-for="FirstName" value="@customer.FirstName" placeholder="Enter your first name" required>
            </div>
            <div class="form-group row">
                <label for="inputSurname">Surname</label>
                <input type="text" class="form-control" id="inputSurname"
                       asp-for="Surname" value="@customer.Surname" placeholder="Enter your surname" required>
            </div>
            <div class="form-group row">
                <label for="inputEmailAddress">Email address</label>
                <input type="email" class="form-control" id="inputEmailAddress"
                       asp-for="Email" value="@customer.Email" placeholder="Enter email">
            </div>
            <div class="form-group row">
                <label for="inputPhoneNumber">Phone Number:</label>
                <input type="tel" class="form-control" id="inputPhoneNumber"
                       asp-for="PhoneNumber"  value="@customer.PhoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}">
                <small class="form-text text-muted">Format: 123-456-789 </small>
            </div>
            <button type="submit" class="btn btn-primary float-right">Submit</button>
        </div>
    </form>
